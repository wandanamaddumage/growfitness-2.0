PORT=3000
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/grow-fitness?retryWrites=true&w=majority

# JWT configuration
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# Frontend origin allowed by CORS
CORS_ORIGIN=https://admin.your-domain.com

# Password reset configuration
PASSWORD_RESET_TOKEN_EXPIRY=3600
FRONTEND_URL=https://admin.your-domain.com

# Email configuration (Gmail SMTP)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=yourcompany@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=yourcompany@gmail.com
